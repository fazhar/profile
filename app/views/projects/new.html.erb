<div class="add-project">
	<div class="col-md-8 col-md-offset-2">
		<h4> Add a Project </h4>
		<%= form_for :project, html: {class: "form-horizontal"} do |f| %>

			<div class="form-group">
				<%= f.text_field :title, class: "form-control", placeholder: "Title" %>
			</div>
			<div class="form-group">
				<%= f.text_area :description, class: "form-control", placeholder: "Enter a description of the project." %>
			</div>

			<h5>Links</h5>
			<div class="form-group">
			    <label for="website" class="col-sm-2 control-label">Website</label>
			    <div class="col-sm-10">
			    	<%= f.text_field :website, class: "form-control", id:"website", placeholder: "Enter website link." %>
			    </div>
			</div>

			<div class="form-group">
				<label for="facebook" class="col-sm-2 control-label">Facebook</label>
				<div class="col-sm-10">
					<%= f.text_field :website, class: "form-control", id:"facebook", placeholder: "Enter facebook link." %>
				</div>
			</div>

			<div class="form-group">
				<label for="twitter" class="col-sm-2 control-label">Twitter</label>
				<div class="col-sm-10">
					<%= f.text_field :facebook, class: "form-control", id:"twitter", placeholder: "Enter twitter link." %>
				</div>
			</div>


			<%= f.submit "Add Project", class: "btn btn-custom" %>
		<% end %>

	</div>
</div>
